<!-- views/edit.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <title>Editar Tarefa</title>
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="text-center mb-4">Editar Tarefa</h1>
      <div class="row justify-content-center">
        <div class="col-md-6">
          <form action="/edit/<%= tarefa.tarefa_id %>" method="POST">
            <div class="mb-3">
              <label for="titulo" class="form-label">Título:</label>
              <input
                type="text"
                id="titulo"
                name="titulo"
                class="form-control"
                value="<%= tarefa.titulo %>"
                required
              />
            </div>
            <div class="mb-3">
              <label for="descricao" class="form-label">Descrição:</label>
              <textarea
                id="descricao"
                name="descricao"
                class="form-control"
                rows="3"
                required
              >
<%= tarefa.descricao %></textarea
              >
            </div>
            <div class="mb-3">
              <label for="data_finalizacao" class="form-label">
                Data de Finalização:
              </label>
              <input
                type="date"
                id="data_finalizacao"
                name="data_finalizacao"
                class="form-control"
                value="<%= tarefa.data_finalizacao ? tarefa.data_finalizacao.toISOString().slice(0, 10) : '' %>"
              />
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-primary">
                Salvar Alterações
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS (Opcional para funcionalidades JS do Bootstrap) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
